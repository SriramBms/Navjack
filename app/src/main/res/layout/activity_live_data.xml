<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/carbonfibrerepeat"
    android:gravity="top|left"
    android:orientation="horizontal"
    tools:context=".LiveDataActivity" >
<!-- android:background="@drawable/carbonfibrerepeat"-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        
        
        android:orientation="vertical" >

       
        <de.tudarmstadt.tk.carsensing.activity.view.GaugeView
            android:id="@+id/rpmGauge"
            android:layout_width="@dimen/gauge_height"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:clickable="false"
             />
            
           
       
            
    </LinearLayout>
    
        
   

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="5dp"
        android:orientation="vertical" >
        
		<de.tudarmstadt.tk.carsensing.activity.view.TextGauge
		    android:id="@+id/TextGauge"
		    android:layout_width="fill_parent"
        	android:layout_height="fill_parent"
        	android:layout_margin="5dp"
        	android:clickable = "true" />
		
		
		

    </LinearLayout>

</LinearLayout>
